{
    "compilerOptions": {
        "target": "es2020",
        "lib": [
            "es2023",
            "dom",
            "dom.iterable"
        ],
        "allowSyntheticDefaultImports": true,
        "outDir": "./Resources/Public/JavaScript",
        "module": "ESNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@macopedia/typo3-interactive-tour/*": [
                "src/*"
            ],
            "@typo3/core/": [
                "../../../vendor/typo3/cms-core/Resources/Public/JavaScript/*"
            ]
        },
        "types": [
            "TYPO3"
        ],
        "typeRoots": [
            "node_modules/@types",
            "types",
            "src/types"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
